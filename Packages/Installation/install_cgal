	if [ "${CLN_INSTALLATION}" != 'c' -a \
             "${CLN_INSTALLATION}" != 's' ]; then
	    libpath_option "`_where_is 'CLN_LIB_DIR'`"
	    ${_printf} "%s" "`rpath_directive 'CLN_LIB_DIR'` "
	fi
    fi
}

cln_ldflags()
{
    if [ -n "${CLN_SUPPORT}" ]; then
	if [ -z "${SEPARATE_LIBPATH}" -a "${CLN_INSTALLATION}" != 'c' -a \
             "${CLN_INSTALLATION}" != 's' ]; then
	    libpath_option "`_where_is 'CLN_LIB_DIR'`"
	    ${_printf} "%s" "`rpath_directive 'CLN_LIB_DIR'` "
	fi
