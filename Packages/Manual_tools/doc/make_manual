#!/bin/csh -f
# make_manual

latex_loop -bib -idx cc_manual
\dvips -D 600 -t a4 cc_manual.dvi -o cc_manual.ps
if ( -r cc_manual.ps.gz) rm cc_manual.ps.gz
gzip cc_manual.ps

latex_loop -idx cc_manual_index
\dvips -D 600 -t a4 cc_manual_index.dvi -o cc_manual_index.ps
if ( -r cc_manual_index.ps.gz) rm cc_manual_index.ps.gz
gzip cc_manual_index.ps

latex_loop -idx cc_extract
\dvips -D 600 -t a4 cc_extract.dvi -o cc_extract.ps
if ( -r cc_extract.ps.gz) rm cc_extract.ps.gz
gzip cc_extract.ps

latex_loop -bib -idx latex_to_html
\dvips -D 600 -t a4 latex_to_html.dvi -o latex_to_html.ps
if ( -r latex_to_html.ps.gz) rm latex_to_html.ps.gz
gzip latex_to_html.ps

rm -f *.log *.aux *.dvi *.bbl *.blg *.toc *.idx *.ilg *.ind
