      \ccIndexMainItemBegin{\ccIndexClassName}%
      \lciIf{\ccIndexCrossRef}{%
         \lciIfEmpty{#2}{}{\ccIndexTraitsClassForClasses{\ccc{#2}}}%    
         \lciIfEmpty{#3}{}{\ccIndexTraitsClassForPackages{\ccc{#3}}}%
      }{}
   }{}
}

