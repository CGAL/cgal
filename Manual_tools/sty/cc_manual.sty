            \ccPrintTokens #1\ccEnd%
            \fi
        \else
            \if&#2\ccPrintReturnType #1&#3\ccEnd%
            \else
                \if.#3\ccPrintReturnTypeXQ #1const#2&#3\ccEnd%
                \else\hasLeadingSpace{#2}\ifnum\ccBool=\ccFalse
                        \isLetter{#2}\ccInvert
                    \fi
                    \ifnum\ccBool=\ccTrue
                        \ccPrintReturnType #1#2 #3\ccEnd%
                    \else
