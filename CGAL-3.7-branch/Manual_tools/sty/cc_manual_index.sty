  \else
     \ifx#11% text should be expanded
        \edef\expandedText{#2}%
        \expandafter\isCommand\expandedText\end%
        \findTextX#2\end%
     \else%
        \ccBool=\ccFalse% must assume there is no command
        \findTextX#2\end%
